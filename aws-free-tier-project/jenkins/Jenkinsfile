pipeline {
    agent any

    environment {
        ENVIRONMENTS = "dev,prod"
    }

    stages {
        stage('Terraform Free-Tier Deploy') {
            steps {
                script {
                    def envs = ENVIRONMENTS.split(',')

                    for (envName in envs) {
                        stage("ğŸ” Apply Terraform - ${envName}") {
                            def tfDir = "aws-free-tier-project/terraform/${envName}"
                            def tfVars = "${envName}.tfvars"

                            dir(tfDir) {
                                echo "ğŸ”§ Initializing Terraform for ${envName}"

                                bat 'terraform init'
                                bat 'terraform validate'
                                bat "terraform plan -var-file=${tfVars}"
                                bat "terraform apply -auto-approve -var-file=${tfVars}"
                            }

                            if (envName == "prod") {
                                echo "ğŸ” PROD - Notify admin"
                            } else {
                                echo "ğŸ§ª DEV - Enable auto-tests"
                            }

                            def retries = 0
                            def healthy = false
                            while (!healthy && retries < 3) {
                                echo "Checking service status... attempt ${retries + 1}"
                                healthy = true
                                sleep 2
                                retries++
                            }

                            if (!healthy) {
                                error "âŒ Service not healthy in ${envName}"
                            }
                        }
                    }
                }
            }
        }
    }
}
